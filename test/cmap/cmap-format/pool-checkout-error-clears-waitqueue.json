{
  "version": 1,
  "style": "integration",
  "description": "connection error during checkout clears wait queue",
  "failPoint": {
    "configureFailPoint": "failCommand",
    "mode": {
      "times": 50
    },
    "data": {
      "failCommands": [
        "hello",
        "isMaster"
      ],
      "appName": "poolCheckOutErrorWaitQueueTest",
      "closeConnection": true,
      "blockConnection": true,
      "blockTimeMS": 1000
    }
  },
  "poolOptions": {
    "maxPoolSize": 1,
    "waitQueueTimeoutMS": 30000,
    "appName": "poolCheckOutErrorWaitQueueTest"
  },
  "operations": [
    {
      "name": "ready"
    },
    {
      "name": "start",
      "target": "thread1"
    },
    {
      "name": "checkOut",
      "thread": "thread1"
    },
    {
      "name": "start",
      "target": "thread2"
    },
    {
      "name": "checkOut",
      "thread": "thread2"
    },
    {
      "name": "start",
      "target": "thread3"
    },
    {
      "name": "checkOut",
      "thread": "thread3"
    },
    {
      "name": "waitForEvent",
      "event": "ConnectionCheckOutStarted",
      "count": 3
    },
    {
      "name": "waitForEvent",
      "event": "ConnectionCheckOutFailed",
      "count": 3,
      "timeout": 2000
    }
  ],
  "events": [
    {
      "type": "ConnectionCheckOutStarted",
      "address": 42
    },
    {
      "type": "ConnectionCheckOutStarted",
      "address": 42
    },
    {
      "type": "ConnectionCheckOutStarted",
      "address": 42
    },
    {
      "type": "ConnectionPoolCleared",
      "address": 42
    },
    {
      "type": "ConnectionCheckOutFailed",
      "reason": "connectionError",
      "address": 42
    },
    {
      "type": "ConnectionCheckOutFailed",
      "reason": "connectionError",
      "address": 42
    },
    {
      "type": "ConnectionCheckOutFailed",
      "reason": "connectionError",
      "address": 42
    }
  ],
  "ignore": [
    "ConnectionPoolReady",
    "ConnectionCreated",
    "ConnectionPoolCreated",
    "ConnectionClosed"
  ]
}
