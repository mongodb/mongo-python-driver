{
  "description": "backpressure hello-command-error",
  "schemaVersion": "1.17",
  "runOnRequirements": [
    {
      "minServerVersion": "4.4.7",
      "serverless": "forbid",
      "topologies": [
        "single",
        "replicaset",
        "sharded"
      ]
    }
  ],
  "createEntities": [
    {
      "client": {
        "id": "setupClient",
        "useMultipleMongoses": false
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "backpressure hello-command-error",
      "databaseName": "sdam-tests",
      "documents": []
    }
  ],
  "tests": [
    {
      "description": "hello command error with backpressure label does not clear the pool",
      "operations": [
        {
          "name": "createEntities",
          "object": "testRunner",
          "arguments": {
            "entities": [
              {
                "client": {
                  "id": "client",
                  "useMultipleMongoses": false,
                  "observeEvents": [
                    "serverHeartbeatSucceededEvent",
                    "poolClearedEvent",
                    "poolReadyEvent",
                    "commandStartedEvent"
                  ],
                  "uriOptions": {
                    "retryWrites": false,
                    "heartbeatFrequencyMS": 10000,
                    "serverMonitoringMode": "poll",
                    "directConnection": true,
                    "appname": "backpressureCommandErrorHandshakeTest"
                  }
                }
              },
              {
                "database": {
                  "id": "database",
                  "client": "client",
                  "databaseName": "sdam-tests"
                }
              },
              {
                "collection": {
                  "id": "collection",
                  "database": "database",
                  "collectionName": "backpressure hello-command-error"
                }
              }
            ]
          }
        },
        {
          "name": "waitForEvent",
          "object": "testRunner",
          "arguments": {
            "client": "client",
            "event": {
              "serverHeartbeatSucceededEvent": {}
            },
            "count": 1
          }
        },
        {
          "name": "failPoint",
          "object": "testRunner",
          "arguments": {
            "client": "setupClient",
            "failPoint": {
              "configureFailPoint": "failCommand",
              "mode": "alwaysOn",
              "data": {
                "failCommands": [
                  "hello",
                  "isMaster"
                ],
                "appName": "backpressureCommandErrorHandshakeTest",
                "closeConnection": false,
                "errorCode": 9001,
                "errorLabels": [
                  "SystemOverloadedError"
                ]
              }
            }
          }
        },
        {
          "name": "insertMany",
          "object": "collection",
          "arguments": {
            "documents": [
              {
                "_id": 1
              },
              {
                "_id": 2
              }
            ]
          },
          "expectError": {
            "isError": true
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client",
          "eventType": "cmap",
          "events": [
            {
              "poolReadyEvent": {}
            }
          ]
        },
        {
          "client": "client",
          "eventType": "sdam",
          "ignoreExtraEvents": false,
          "events": [
            {
              "serverHeartbeatSucceededEvent": {}
            }
          ]
        }
      ]
    }
  ]
}
