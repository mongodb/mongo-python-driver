{
  "description": "replaceOne-validation",
  "schemaVersion": "1.1",
  "createEntities": [
    {
      "client": {
        "id": "client0",
        "observeEvents": [
          "commandStartedEvent"
        ]
      }
    },
    {
      "database": {
        "id": "database0",
        "client": "client0",
        "databaseName": "crud-v2"
      }
    },
    {
      "collection": {
        "id": "collection0",
        "database": "database0",
        "collectionName": "crud-v2"
      }
    }
  ],
  "initialData": [
    {
      "collectionName": "crud-v2",
      "databaseName": "crud-v2",
      "documents": [
        {
          "_id": 1,
          "x": 11
        }
      ]
    }
  ],
  "tests": [
    {
      "description": "ReplaceOne prohibits atomic modifiers",
      "operations": [
        {
          "object": "collection0",
          "name": "replaceOne",
          "arguments": {
            "filter": {
              "_id": 1
            },
            "replacement": {
              "$set": {
                "x": 22
              }
            }
          },
          "expectError": {
            "isError": true
          }
        }
      ],
      "expectEvents": [
        {
          "client": "client0",
          "events": []
        }
      ],
      "outcome": [
        {
          "collectionName": "crud-v2",
          "databaseName": "crud-v2",
          "documents": [
            {
              "_id": 1,
              "x": 11
            }
          ]
        }
      ]
    }
  ]
}
